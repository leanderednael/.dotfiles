{
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.unusedImports": "explicit"
  },
  "editor.fontFamily": "Monaco, Monaco, 'Courier New', monospace",
  "editor.formatOnSave": true,
  "files.associations": {
    "CODEOWNERS": "plaintext",
    "*.m": "matlab"
  },
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "github.copilot.enable": {
    "*": true,
    "dotenv": false,
    "ini": false,
    "json": false,
    "latex": false,
    "markdown": false,
    "plaintext": false,
    "scminput": false,
    "yaml": false,
    "xml": false
  },
  "workbench.colorTheme": "Ayu Light",
  "workbench.iconTheme": "vscode-icons",
  "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google}",
  "[c]": {
    "editor.tabSize": 2
  },
  "[cpp]": {
    "editor.tabSize": 2
  },
  "[groovy]": {
    "editor.defaultFormatter": "marlon407.code-groovy",
    "editor.tabSize": 2
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[latex]": {
    "editor.defaultFormatter": "lenagain.latexindent"
  },
  "[makefile]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.black-formatter" // ms-python.autopep8
  },
  "autopep8.args": ["--in-place", "--aggressive"],
  "isort.args": ["--profile", "black"],
  "mypy.runUsingActiveInterpreter": true,
  "notebook.editorOptionsCustomizations": {
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true
  },
  "python.analysis.typeCheckingMode": "standard",
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["."],
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true
  },
  "rust-analyzer.workspace.discoverConfig": null,
  "[scala]": {
    "editor.defaultFormatter": "scalameta.metals",
    "editor.tabSize": 2
  },
  "[shellscript]": {
    "editor.tabSize": 2
  },
  "[toml]": {
    "editor.defaultFormatter": "be5invis.toml"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  }
}
